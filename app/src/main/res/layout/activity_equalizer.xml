<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/blue_bg"
    tools:context=".EqualizerActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equalizer"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bandContainer"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginTop="4dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60Hz"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/seek60"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="-90"
                android:progressDrawable="@drawable/equlizer_track"
                android:thumb="@drawable/equalizer_thumb"
                android:splitTrack="false"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230Hz"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/seek230"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="-90"
                android:progressDrawable="@drawable/equlizer_track"
                android:thumb="@drawable/equalizer_thumb"
                android:splitTrack="false"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1kHz"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/seek1k"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="-90"
                android:progressDrawable="@drawable/equlizer_track"
                android:thumb="@drawable/equalizer_thumb"
                android:splitTrack="false"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5kHz"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/seek35k"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="-90"
                android:progressDrawable="@drawable/equlizer_track"
                android:thumb="@drawable/equalizer_thumb"
                android:splitTrack="false"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10kHz"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/seek10k"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="-90"
                android:progressDrawable="@drawable/equlizer_track"
                android:thumb="@drawable/equalizer_thumb"
                android:splitTrack="false"/>
        </LinearLayout>

    </LinearLayout>

    <com.example.musicplayer.roundKnobView.RoundKnobView
        android:id="@+id/knobBass"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/bandContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvBass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bass"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="@+id/knobBass"
        app:layout_constraintStart_toStartOf="@+id/knobBass"
        app:layout_constraintTop_toBottomOf="@id/knobBass" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTreble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Treble"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="@+id/knobTreble"
        app:layout_constraintStart_toStartOf="@+id/knobTreble"
        app:layout_constraintTop_toBottomOf="@id/knobTreble" />

    <com.example.musicplayer.roundKnobView.RoundKnobView
        android:id="@+id/knobTreble"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/bandContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_spinner_preset"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/presetSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:popupBackground="@drawable/bg_spinner_preset"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="4dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_arrow_down" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>